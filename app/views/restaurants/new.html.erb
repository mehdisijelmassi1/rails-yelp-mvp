<h1> Create a new restaurant </h1>

<div class="container">
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.submit class: "btn btn-primary" %>
    <% end %>

   <%= link_to "Back to the restaurants", restaurants_path, class: "btn btn-primary mt-3" %>
</div>
